<h1>Farmer Login</h1>

<div class="row-fluid">
	<div class="span8">
		<%= form_tag "/sessions/create" do %>
			<fieldset>
				<div class="field">	
					<%= label_tag :email %>
					<%= email_field_tag :email, params[:email] %>
				</div>
				
				<div class="field">
					<%= label_tag :password %>
					<%= password_field_tag :password, params[:password] %>
				</div>
				
				<div class="actions">
					<%= submit_tag "Login", :class => "btn btn-primary" %>
				</div>
			</fieldset>
		<% end %>
	</div>
</div>